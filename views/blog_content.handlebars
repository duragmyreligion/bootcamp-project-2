{{#if logged_in}}
<a class="btn custom-button create-post" href="/blog_new_post" role="button">Create Post</a>
{{/if}}
<div class="main-container">
  {{#each forums as |forum|}}
  <div class="card">
  <div class="card-header">
    {{forum.name}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{forum.title}}</h5>
    <p class="card-text">{{forum.description}}</p>
    <a href="#" class="btn btn-primary">Comment</a>
  </div>
</div>
  {{/each}}
</div>
<div class="dropdown">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="width: 200px;"></a>
  <ul class="dropdown-menu">
    {{#each forums as |forum| }}
      <li><a class="dropdown-item" href="/Forum/{{forum.id}}">{{forum.name}}</a></li>
    {{/each}}
  </ul>
</div>